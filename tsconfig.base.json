{
	"compileOnSave": false,
	"compilerOptions": {
		"composite": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"isolatedModules": true,
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"strict": true,
		"customConditions": ["development"],
		"paths": {
			"deck-gl": ["libs/deck-gl/src/index.ts"],
			"testlib": ["libs/testlib/src/index.ts"]
		}
	}
}
